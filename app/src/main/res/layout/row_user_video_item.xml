<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_10sdp"
    app:cardElevation="4sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/more_btn"
            android:paddingBottom="5dp"
            android:text="How to made biriyanidadadaad"
            android:textColor="@color/brightGray"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/video_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_title"
            android:fontFamily="@font/ubuntu_medium"
            android:background="@drawable/category_background"
            android:drawableStart="@drawable/ic_baseline_fastfood_24"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:gravity="center"
            tools:text="Pizza" />

        <TextView
            android:id="@+id/video_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_category"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/grey_40"
            android:textSize="@dimen/_12sdp"
            tools:text="So famous recipe without it dinner is uncompleted" />


        <ImageView
            android:id="@+id/more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/video_title"
            android:layout_alignTop="@+id/video_title"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:tint="@color/black" />

        <RelativeLayout
            android:id="@+id/imageSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_description">

            <ImageView
                android:id="@+id/video_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="fitXY"
                android:src="@drawable/food" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_play_circle_outline_24"
                app:tint="@color/roseWhite" />

        </RelativeLayout>
        <TextView
            android:id="@+id/videoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/imageSection"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="end|right"
            android:maxLines="1"
            android:text="3h ago"
            android:textColor="@color/grey_40"
            android:textSize="@dimen/_12sdp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>